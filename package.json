{
	"name": "code-speedy",
	"displayName": "code-speedy (macro loader)",
	"description": "Creates commands from configured macros.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Macros configuration",
			"properties": {
				"macros": {}
			}
		},
		"commands": [
			{
				"command": "macros.run",
				"title": "Macros: Run A Macro"
			},
			{
				"command": "macros.dummy",
				"title": "Macro Dummy"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "jest"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"babel-jest": "^26.3.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"jest": "^26.4.0",
		"ts-jest": "^26.2.0",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/vscode": "^1.47.0"
	},
	"jest": {
		"verbose": true,
		"testEnvironment": "node",
		"roots": [
			"node_modules",
			"src",
			"tests"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"testMatch": [
			"**/__tests__/**/*.+(ts|tsx|js)",
			"**/?(*.)+(spec|test).+(ts|tsx|js)"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"moduleNameMapper": {
			"^vscode": "<rootDir>/node_modules/vscode-test"
		}
	}
}
